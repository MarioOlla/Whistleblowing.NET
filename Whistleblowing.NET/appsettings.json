{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "WhistleBlowingContext": "Server=localhost;Database=WhistleBlowing.net;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=true;TrustServerCertificate=true"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*", // Applica il rate limit a tutti gli endpoint
        "Period": "1m", // Limita a un minuto
        "Limit": 5 // Massimo 5 richieste per IP al minuto
      },
      {
        "Endpoint": "/api/values", // Regola specifica per l'endpoint /api/values
        "Period": "1h", // Limita a un'ora
        "Limit": 100 // Massimo 100 richieste per IP all'ora
      }
    ]
  }
}
