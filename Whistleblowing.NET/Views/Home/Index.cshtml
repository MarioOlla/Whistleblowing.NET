    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var links = document.querySelectorAll('.nav-wrapper a');
            var contents = document.querySelectorAll('.content');

            // Gestisci i link della navbar
            links.forEach(function (link) {
                link.addEventListener('click', function (event) {
                    event.preventDefault(); // Previene il comportamento di default del link

                    // Nascondi tutte le sezioni dei contenuti
                    contents.forEach(function (content) {
                        content.style.display = 'none';
                    });

                    // Mostra il contenuto corrispondente al link cliccato
                    var targetId = link.getAttribute('href').substring(1); // Rimuove il hash
                    var targetContent = document.getElementById(targetId + '-content');
                    if (targetContent) {
                        targetContent.style.display = 'block';
                    }
                });
            });

            // Gestisci click sulle domande delle FAQ per mostrare/nascondere le risposte
            var faqQuestions = document.querySelectorAll('.faq-question');
            faqQuestions.forEach(function (question) {
                question.addEventListener('click', function () {
                    var answer = this.nextElementSibling; // La risposta è l'elemento fratello successivo
                    this.classList.toggle('active'); // Aggiunge/rimuove la classe active per girare la freccia
                    if (answer.style.display === 'none' || answer.style.display === '') {
                        answer.style.display = 'block'; // Mostra la risposta
                    } else {
                        answer.style.display = 'none'; // Nasconde la risposta
                    }
                });
            });
        });
        document.addEventListener('DOMContentLoaded', function () {
            // Inizializza i selettori del menu a tendina di Materialize
            var elems = document.querySelectorAll('select');
            M.FormSelect.init(elems);
        });
    </script>

