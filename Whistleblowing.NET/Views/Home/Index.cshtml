                    <label for="luogoevento">Luogo evento </label>
                </div>

                <div class="input-field col s12">
                    <input id="soggetti" name="soggetti" type="text" class="validate" required>
                    <label for="soggetti">Soggetti che hanno commesso il fatto </label>
                </div>

             </div>
